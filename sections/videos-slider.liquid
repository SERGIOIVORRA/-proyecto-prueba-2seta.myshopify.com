<script>
function scrollFunctionDesktop() {
  var scrollTop = window.pageYOffset || document.documentElement.scrollTop;
  var windowHeight = window.innerHeight || document.documentElement.clientHeight;
  var twoPercentOfWindow = windowHeight * 0.8;

  if (scrollTop < twoPercentOfWindow) {
    document.getElementById("video-container").style.display = "block";
  } else {
    document.getElementById("video-container").style.display = "none";
  }
}

function scrollFunctionMobile() {
  var scrollTop = window.pageYOffset || document.documentElement.scrollTop;
  var windowHeight = window.innerHeight || document.documentElement.clientHeight;
  var twoPercentOfWindow = windowHeight * 7;

  if (scrollTop < twoPercentOfWindow) {
    document.getElementById("video-container").style.display = "block";
  } else {
    document.getElementById("video-container").style.display = "none";
  }
}

// Agregar evento de desplazamiento dependiendo del dispositivo
if (window.innerWidth <= 768) {
  console.log("Dispositivo móvil detectado.");
  window.addEventListener('scroll', scrollFunctionMobile);
  scrollFunctionMobile();
} else {
  console.log("Escritorio detectado.");
  window.addEventListener('scroll', scrollFunctionDesktop);
  scrollFunctionDesktop();
}
</script>



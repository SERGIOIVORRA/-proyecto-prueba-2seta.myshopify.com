<script>
  var currentIndex = 0;
  var videosContainer = document.querySelector('.videos');
  var videoWrappers = document.querySelectorAll('.video-item');

  function slideVideos(direction) {
    currentIndex += direction;

    // Ajusta el índice para evitar desbordamientos
    if (currentIndex < 0) {
      currentIndex = videoWrappers.length - 1;
    } else if (currentIndex >= videoWrappers.length) {
      currentIndex = 0;
    }

    // Ajusta la posición de los videos
    videoWrappers.forEach(function (video, index) {
      var position = (index - currentIndex + videoWrappers.length) % videoWrappers.length;
      video.style.order = position;

      
    });







 // Obtener todos los elementos con la clase swiper-pagination-bulletoscuro
  const bulletsOscuros = document.querySelectorAll('.swiper-pagination-bulletoscuro');

  // Agregar la clase gray-background a cada elemento con un ligero retraso
  bulletsOscuros.forEach(bullet => {
    bullet.classList.add('gray-background');
    setTimeout(() => {
      bullet.classList.remove('gray-background');
    }, 400); // Retraso de 2 segundos antes de eliminar la clase
  });




    
  }

   
</script>







<script>
  const slider = document.querySelector('.slider');
const slides = document.querySelectorAll('.slide');
let slideIndex = 0;

function showSlides() {
    if (window.innerWidth <= 1200) {
        // C√≥digo para dispositivos m√≥viles
        slides.forEach((slide, index) => {
            slide.style.display = index === slideIndex ? 'block' : 'none';
        });
    } else {
        // C√≥digo para PC
        slides.forEach((slide, index) => {
            if (index >= slideIndex && index < slideIndex + 3) {
                slide.style.display = 'block';
            } else {
                slide.style.display = 'none';
            }
        });
    }

    // Desactivar bot√≥n prev cuando no hay m√°s diapositivas hacia atr√°s
    document.querySelector('.prev').disabled = slideIndex === 0;

    // Desactivar bot√≥n next cuando no hay m√°s diapositivas hacia adelante
    document.querySelector('.next').disabled = slideIndex >= slides.length - 3;
}

function moveSlide(n) {
    slideIndex += n;
    if (slideIndex < 0) {
        slideIndex = slides.length - 1;
    } else if (slideIndex >= slides.length) {
        slideIndex = 0;
    }
    showSlides();
}

// Mostrar las diapositivas cuando la p√°gina se carga
showSlides();

// Actualizar las diapositivas cuando la ventana cambia de tama√±o
window.addEventListener('resize', showSlides);
 
</script>
